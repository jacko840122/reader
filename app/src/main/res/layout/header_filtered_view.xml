<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Header"
    android:layout_marginTop="25dp"
    android:background="#ff00dd88" >

    <ImageButton
        android:id="@id/back_btn"
        style="@style/SortHeader"
        android:background="@android:color/transparent"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:src="@drawable/back_button"
        android:visibility="gone" />

    <CheckBox
        android:id="@id/library_order_icon"
        style="@style/SortHeader"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_marginRight="20.0dip"
        android:visibility="visible" >

        <Button
            android:id="@id/library_change_sort_criteria_header"
            style="@style/HeaderFilteredTitle"
            android:layout_marginLeft="17dp"
            android:onClick="onClick" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_weight="1.0"
        android:gravity="center"
        android:text="我的图书"
        android:textColor="#ffffffff"
        android:textSize="42px" />

    <CheckBox
        android:id="@id/all_checkbox"
        style="@style/AllCheckbox"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/bookdelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:src="@drawable/bookdelete_btn" />

    <ImageView
        android:id="@+id/downManager_btn"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/bookdelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/downmanager_btn"
        android:layout_marginRight="10dp" />

    <ImageView
        android:id="@+id/finishdelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:src="@drawable/finishdelete_btn"
        android:visibility="gone" />

</RelativeLayout>
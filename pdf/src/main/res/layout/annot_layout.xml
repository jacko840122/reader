<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_annot_menu"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:background="@color/common_black"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:visibility="gone"
    >

    <LinearLayout
        android:id="@+id/copytext_ly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:gravity="center"
        android:orientation="horizontal"
        >

       <!-- <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_clipboard"
            />-->


        <TextView
            style="@style/annot_text_style"
            android:text="@string/copy_text_to_the_clipboard"
            android:drawableLeft="@drawable/ic_clipboard"
            android:drawablePadding="@dimen/activity_vertical_margin"
            />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/highlight_ly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:gravity="center"
        android:orientation="horizontal"
        >

   <!--     <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_highlight"
            />-->


        <TextView
            style="@style/annot_text_style"
            android:text="@string/highlight"
            android:drawableLeft="@drawable/ic_highlight"
            android:drawablePadding="@dimen/activity_vertical_margin"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/underline_ly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:gravity="center"
        android:orientation="horizontal"
        >

      <!--  <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_underline"
            />
-->

        <TextView
            style="@style/annot_text_style"
            android:text="@string/underline"
            android:drawableLeft="@drawable/ic_underline"
            android:drawablePadding="@dimen/activity_vertical_margin"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/strikeOut_ly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:gravity="center"
        android:orientation="horizontal"
        >

     <!--   <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_strike"
            />-->


        <TextView
            style="@style/annot_text_style"
            android:text="@string/strike_out"
            android:drawableLeft="@drawable/ic_strike"
            android:drawablePadding="@dimen/activity_vertical_margin"
            />

    </LinearLayout>


</LinearLayout>
